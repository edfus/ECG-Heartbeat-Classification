{
	"version": "2.0.0",
	"tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "cnn-ecg-classification:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": [
        "docker-build"
      ],
      "python": {
        "file": "main.py"
      },
      "dockerRun": {
        "runtime": "nvidia",
        "gpus": "all", 
        "v": "${workspaceFolder}:/usr/local/src",
        "u": "1810:1820"
      }
    }
  ]
}